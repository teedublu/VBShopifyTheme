{% for group in accordion.groups %}
  <div class="product__accordion accordion quick-add-hidden">
    <details id="Details-{{ group.title | handleize }}">
      <summary>
        <div class="summary__title">
          {% render 'icon-accordion', icon: block.settings.icon %}
          <h2 class="h4 accordion__title">
            {{ group.title }}
          </h2>
        </div>
        {% render 'icon-caret' %}
      </summary>
      <div class="accordion__content rte" id="ProductAccordion-{{ group.title | handleize }}">
        {% render 'portable-text', portableText: group.body %}
      </div>
    </details>
  </div>
{% endfor %}