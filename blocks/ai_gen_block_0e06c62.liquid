{% doc %}
  @prompt
    can you create a link block widget where in mobile its stacked in two rows of two and on desktop its a linear line, Can the link boxes be images?, Can you build in some margin space on the top and bottom of the widget?
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% assign img_sizes = '(max-width: 749px) 50vw, 25vw' %}
{% assign img_widths = '160,200,240,300,360,400,500,600,700,800,900' %}

{% style %}
  .ai-link-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding-top: {{ block.settings.margin_top }}px;
    padding-bottom: {{ block.settings.margin_bottom }}px;
  }

  .ai-link-block-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.mobile_gap }}px;
    width: 100%;
  }

  .ai-link-block-item-{{ ai_gen_id }} {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    aspect-ratio: {{ block.settings.aspect_ratio }};
  }

  .ai-link-block-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-link-block-item-{{ ai_gen_id }}:hover .ai-link-block-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-link-block-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-link-block-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-link-block-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,{{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: {{ block.settings.text_padding }}px;
  }

  .ai-link-block-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-align: center;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }

  @media screen and (min-width: 750px) {
    .ai-link-block-container-{{ ai_gen_id }} {
      grid-template-columns: repeat(4, 1fr);
      gap: {{ block.settings.desktop_gap }}px;
      width: {{ block.settings.desktop_width_percent }}%;
      margin: 0 auto;
    }
  }
{% endstyle %}



<link-block-{{ ai_gen_id }} class="ai-link-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-link-block-container-{{ ai_gen_id }}">

    {% for i in (1..4) %}
      {% assign text_key  = 'link_' | append: i | append: '_text' %}
      {% assign url_key   = 'link_' | append: i | append: '_url' %}
      {% assign image_key = 'link_' | append: i | append: '_image' %}

      {% assign link_text  = block.settings[text_key] %}
      {% assign link_url   = block.settings[url_key] %}
      {% assign link_image = block.settings[image_key] %}

      {% if link_text != blank %}
        <a href="{{ link_url }}" class="ai-link-block-item-{{ ai_gen_id }}">

          {% if link_image != blank %}
           {% assign img_class = 'ai-link-block-image-' | append: ai_gen_id %}

            {{ link_image
              | image_url: width: 900, format: 'webp'
              | image_tag:
                  loading: 'lazy',
                  class: img_class,
                  sizes: img_sizes,
                  widths: img_widths,
                  alt: link_image.alt
            }}
          {% else %}
            <div class="ai-link-block-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}

          {% if block.settings.show_text %}
            <div class="ai-link-block-overlay-{{ ai_gen_id }}">
              <span class="ai-link-block-text-{{ ai_gen_id }}">
                {{ link_text }}
              </span>
            </div>
          {% endif %}

        </a>
      {% endif %}
    {% endfor %}

  </div>
</link-block-{{ ai_gen_id }}>


<script>
  (function() {
    class LinkBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('link-block-{{ ai_gen_id }}', LinkBlock{{ ai_gen_id }});
  })();
</script>

