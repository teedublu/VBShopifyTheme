/* Sticky filter bar on desktop */
@media screen and (min-width: 1400px) {
  .sticky-filterbar {
    position: -webkit-sticky; position: sticky; top: 72px; background-color: #ffffffdb; z-index: 500; width: 100%; padding: 10px;
  }
}

/* ---------------------------- */
