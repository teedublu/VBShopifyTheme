    "faq_QTETKt": {
      "type": "faq",
      "blocks": {
        "item_FFV3p4": {
          "type": "item",
          "settings": {
            "title": "Why is Voxblock screen free?",
            "content": "<p>We're not anti-screen - we know that phones and tablets can be great educational tools. But we wanted to create a way of listening to audiobooks that's simple, with the focus on the story alone.<\/p>"
          }
        },
        "item_UcgL66": {
          "type": "item",
          "settings": {
            "title": "What age range is Voxblock suitable for?",
            "content": "<p>We are focussing on delivering world-class stories for children aged 3 and up. We have over 200 titles and are regularly expanding and updating our array of content, so keep an eye on our website!<\/p>"
          }
        },
        "item_gMHxYp": {
