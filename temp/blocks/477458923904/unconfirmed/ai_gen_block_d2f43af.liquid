{% doc %}
  @prompt
    Scrolling logo list
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-logo-list-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
  }

  .ai-logo-list__heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-logo-list__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.logo_spacing }}px;
    animation: ai-logo-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    will-change: transform;
  }

  .ai-logo-list__track-{{ ai_gen_id }}:hover {
    animation-play-state: {{ block.settings.pause_on_hover | default: false | if: 'paused', 'running' }};
  }

  .ai-logo-list__item-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.logo_width }}px;
    height: {{ block.settings.logo_height }}px;
  }

  .ai-logo-list__image-{{ ai_gen_id }} {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: {{ block.settings.logo_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease;
    filter: grayscale({{ block.settings.grayscale_amount }}%);
  }

  .ai-logo-list__item-{{ ai_gen_id }}:hover .ai-logo-list__image-{{ ai_gen_id }} {
    opacity: 1;
    filter: grayscale(0%);
  }

  .ai-logo-list__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: 8px;
  }

  .ai-logo-list__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @keyframes ai-logo-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - {{ block.settings.logo_spacing }}px));
    }
  }

  @media screen and (max-width: 749px) {
    .ai-logo-list__item-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width | times: 0.7 }}px;
      height: {{ block.settings.logo_height | times: 0.7 }}px;
    }

    .ai-logo-list__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<logo-scroller-{{ ai_gen_id }} class="ai-logo-list-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-logo-list__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="ai-logo-list__track-{{ ai_gen_id }}">
    {% for i in (1..8) %}
      {% liquid
        assign logo_key = 'logo_' | append: i
        assign logo = block.settings[logo_key]
      %}
      
      {% if logo != blank %}
        <div class="ai-logo-list__item-{{ ai_gen_id }}">
          <img
            src="{{ logo | image_url: width: 400 }}"
            alt="{{ logo.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.logo_width }}"
            height="{{ block.settings.logo_height }}"
            class="ai-logo-list__image-{{ ai_gen_id }}"
          >
        </div>
      {% else %}
        <div class="ai-logo-list__item-{{ ai_gen_id }}">
          <div class="ai-logo-list__placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        </div>
      {% endif %}
    {% endfor %}

    {% for i in (1..8) %}
      {% liquid
        assign logo_key = 'logo_' | append: i
        assign logo = block.settings[logo_key]
      %}
      
      {% if logo != blank %}
        <div class="ai-logo-list__item-{{ ai_gen_id }}">
          <img
            src="{{ logo | image_url: width: 400 }}"
            alt="{{ logo.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.logo_width }}"
            height="{{ block.settings.logo_height }}"
            class="ai-logo-list__image-{{ ai_gen_id }}"
          >
        </div>
      {% else %}
        <div class="ai-logo-list__item-{{ ai_gen_id }}">
          <div class="ai-logo-list__placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</logo-scroller-{{ ai_gen_id }}>

<script>
  (function() {
    class LogoScroller{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-logo-list__track-{{ ai_gen_id }}');
        this.adjustScrollSpeed();
      }

      adjustScrollSpeed() {
        if (!this.track) return;
        
        const trackWidth = this.track.scrollWidth / 2;
        const speed = {{ block.settings.scroll_speed }};
        const duration = (trackWidth / 100) * speed;
        
        this.track.style.animationDuration = duration + 's';
      }
    }

    customElements.define('logo-scroller-{{ ai_gen_id }}', LogoScroller{{ ai_gen_id }});
  })();
</script>

