    a comparison table to compare three different products, Can the product options just be text boxes?
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-comparison-table-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    overflow-x: auto;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-comparison-table__wrapper-{{ ai_gen_id }} {
    min-width: 600px;
  }

  .ai-comparison-table__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-comparison-table__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
  }

  .ai-comparison-table__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-comparison-table__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 2px;
    background-color: {{ block.settings.border_color }};
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.table_border_radius }}px;
    overflow: hidden;
  }

  .ai-comparison-table__cell-{{ ai_gen_id }} {
    background-color: {{ block.settings.cell_background }};
    padding: 20px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 80px;
  }

  .ai-comparison-table__cell-{{ ai_gen_id }}--header {
    background-color: {{ block.settings.header_background }};
    font-weight: 600;
    color: {{ block.settings.header_text_color }};
    font-size: 14px;
  }

  .ai-comparison-table__cell-{{ ai_gen_id }}--feature {
    background-color: {{ block.settings.feature_background }};
    justify-content: flex-start;
    text-align: left;
    font-weight: 500;
    color: {{ block.settings.text_color }};
    font-size: 14px;
  }

  .ai-comparison-table__product-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    width: 100%;
  }

  .ai-comparison-table__product-image-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
  }

  .ai-comparison-table__product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-comparison-table__product-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-table__product-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
  }

  .ai-comparison-table__product-name-{{ ai_gen_id }} {
    font-size: 15px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-comparison-table__product-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-comparison-table__check-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    color: {{ block.settings.check_color }};
  }

  .ai-comparison-table__cross-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    color: {{ block.settings.cross_color }};
  }

  .ai-comparison-table__text-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
  }

  .ai-comparison-table__empty-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    padding: 60px 20px;
    text-align: center;
    color: #999;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-comparison-table-{{ ai_gen_id }} {
      padding: 20px 10px;
    }

    .ai-comparison-table__cell-{{ ai_gen_id }} {
      padding: 16px 12px;
      min-height: 60px;
    }

    .ai-comparison-table__product-image-{{ ai_gen_id }} {
      width: 60px;
      height: 60px;
    }

    .ai-comparison-table__product-name-{{ ai_gen_id }} {
      font-size: 13px;
    }

    .ai-comparison-table__product-price-{{ ai_gen_id }} {
      font-size: 12px;
    }

    .ai-comparison-table__cell-{{ ai_gen_id }}--feature {
      font-size: 13px;
    }

    .ai-comparison-table__text-{{ ai_gen_id }} {
      font-size: 13px;
    }
  }
{% endstyle %}

<div class="ai-comparison-table-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-comparison-table__wrapper-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-comparison-table__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-comparison-table__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-comparison-table__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% liquid
      assign product_1_name = block.settings.product_1_name
      assign product_2_name = block.settings.product_2_name
      assign product_3_name = block.settings.product_3_name
      assign has_products = false
      if product_1_name != blank or product_2_name != blank or product_3_name != blank
        assign has_products = true
      endif
    %}

    <div class="ai-comparison-table__grid-{{ ai_gen_id }}">
      {% if has_products %}
        <div class="ai-comparison-table__cell-{{ ai_gen_id }} ai-comparison-table__cell-{{ ai_gen_id }}--header">
          {{ block.settings.feature_column_label }}
        </div>

        <div class="ai-comparison-table__cell-{{ ai_gen_id }} ai-comparison-table__cell-{{ ai_gen_id }}--header">
          <div class="ai-comparison-table__product-{{ ai_gen_id }}">
            {% if block.settings.product_1_image != blank %}
              <div class="ai-comparison-table__product-image-{{ ai_gen_id }}">
                <img
                  src="{{ block.settings.product_1_image | image_url: width: 160 }}"
                  alt="{{ block.settings.product_1_image.alt | escape }}"
                  width="160"
                  height="160"
                  loading="lazy"
                >
              </div>
            {% endif %}
            {% if product_1_name != blank %}
              <h3 class="ai-comparison-table__product-name-{{ ai_gen_id }}">{{ product_1_name }}</h3>
            {% endif %}
            {% if block.settings.product_1_price != blank %}
              <div class="ai-comparison-table__product-price-{{ ai_gen_id }}">{{ block.settings.product_1_price }}</div>
            {% endif %}
          </div>
        </div>

        <div class="ai-comparison-table__cell-{{ ai_gen_id }} ai-comparison-table__cell-{{ ai_gen_id }}--header">
          <div class="ai-comparison-table__product-{{ ai_gen_id }}">
            {% if block.settings.product_2_image != blank %}
              <div class="ai-comparison-table__product-image-{{ ai_gen_id }}">
                <img
                  src="{{ block.settings.product_2_image | image_url: width: 160 }}"
                  alt="{{ block.settings.product_2_image.alt | escape }}"
                  width="160"
                  height="160"
                  loading="lazy"
                >
              </div>
            {% endif %}
            {% if product_2_name != blank %}
              <h3 class="ai-comparison-table__product-name-{{ ai_gen_id }}">{{ product_2_name }}</h3>
            {% endif %}
            {% if block.settings.product_2_price != blank %}
              <div class="ai-comparison-table__product-price-{{ ai_gen_id }}">{{ block.settings.product_2_price }}</div>
            {% endif %}
          </div>
        </div>

        <div class="ai-comparison-table__cell-{{ ai_gen_id }} ai-comparison-table__cell-{{ ai_gen_id }}--header">
          <div class="ai-comparison-table__product-{{ ai_gen_id }}">
            {% if block.settings.product_3_image != blank %}
              <div class="ai-comparison-table__product-image-{{ ai_gen_id }}">
                <img
                  src="{{ block.settings.product_3_image | image_url: width: 160 }}"
                  alt="{{ block.settings.product_3_image.alt | escape }}"
                  width="160"
                  height="160"
                  loading="lazy"
                >
              </div>
            {% endif %}
            {% if product_3_name != blank %}
              <h3 class="ai-comparison-table__product-name-{{ ai_gen_id }}">{{ product_3_name }}</h3>
            {% endif %}
            {% if block.settings.product_3_price != blank %}
              <div class="ai-comparison-table__product-price-{{ ai_gen_id }}">{{ block.settings.product_3_price }}</div>
            {% endif %}
          </div>
        </div>

        {% for i in (1..10) %}
          {% liquid
            assign feature_key = 'feature_' | append: i
            assign product_1_key = 'product_1_feature_' | append: i
            assign product_2_key = 'product_2_feature_' | append: i
            assign product_3_key = 'product_3_feature_' | append: i

            assign feature_name = block.settings[feature_key]
            assign product_1_value = block.settings[product_1_key]
            assign product_2_value = block.settings[product_2_key]
            assign product_3_value = block.settings[product_3_key]
          %}

          {% if feature_name != blank %}
            <div class="ai-comparison-table__cell-{{ ai_gen_id }} ai-comparison-table__cell-{{ ai_gen_id }}--feature">
              {{ feature_name }}
            </div>

            <div class="ai-comparison-table__cell-{{ ai_gen_id }}">
              {% if product_1_value == 'yes' %}
                <svg class="ai-comparison-table__check-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              {% elsif product_1_value == 'no' %}
                <svg class="ai-comparison-table__cross-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              {% elsif product_1_value != blank %}
                <span class="ai-comparison-table__text-{{ ai_gen_id }}">{{ product_1_value }}</span>
              {% endif %}
            </div>

            <div class="ai-comparison-table__cell-{{ ai_gen_id }}">
              {% if product_2_value == 'yes' %}
                <svg class="ai-comparison-table__check-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              {% elsif product_2_value == 'no' %}
                <svg class="ai-comparison-table__cross-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              {% elsif product_2_value != blank %}
                <span class="ai-comparison-table__text-{{ ai_gen_id }}">{{ product_2_value }}</span>
              {% endif %}
            </div>

            <div class="ai-comparison-table__cell-{{ ai_gen_id }}">
              {% if product_3_value == 'yes' %}
                <svg class="ai-comparison-table__check-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              {% elsif product_3_value == 'no' %}
                <svg class="ai-comparison-table__cross-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              {% elsif product_3_value != blank %}
                <span class="ai-comparison-table__text-{{ ai_gen_id }}">{{ product_3_value }}</span>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        <div class="ai-comparison-table__empty-{{ ai_gen_id }}">
          Next, add product names to start comparing
        </div>
      {% endif %}
    </div>
  </div>
</div>

