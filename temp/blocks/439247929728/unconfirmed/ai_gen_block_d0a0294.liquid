{% doc %}
  @prompt
    A meet the team section

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-meet-team-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-meet-team-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-meet-team-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-meet-team-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-meet-team-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    max-width: 600px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ai-meet-team-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-meet-team-member-{{ ai_gen_id }} {
    text-align: center;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-meet-team-member-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-meet-team-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    margin-bottom: 20px;
    display: inline-block;
  }

  .ai-meet-team-image-{{ ai_gen_id }} {
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: {% if block.settings.image_style == 'circle' %}50%{% else %}{{ block.settings.image_border_radius }}px{% endif %};
    object-fit: cover;
    border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
  }

  .ai-meet-team-image-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: {% if block.settings.image_style == 'circle' %}50%{% else %}{{ block.settings.image_border_radius }}px{% endif %};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
    margin: 0 auto;
  }

  .ai-meet-team-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: #ccc;
  }

  .ai-meet-team-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.name_color }};
    margin: 0 0 8px;
  }

  .ai-meet-team-role-{{ ai_gen_id }} {
    font-size: {{ block.settings.role_size }}px;
    color: {{ block.settings.role_color }};
    margin: 0 0 12px;
    font-style: italic;
  }

  .ai-meet-team-bio-{{ ai_gen_id }} {
    font-size: {{ block.settings.bio_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-meet-team-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 768px) {
    .ai-meet-team-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-meet-team-image-{{ ai_gen_id }},
    .ai-meet-team-image-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.8 }}px;
      height: {{ block.settings.image_size | times: 0.8 }}px;
    }

    .ai-meet-team-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-meet-team-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-meet-team-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-meet-team-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-meet-team-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-meet-team-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_members = false %}
    {% for i in (1..6) %}
      {% liquid
        assign name_key = 'member_' | append: i | append: '_name'
        assign member_name = block.settings[name_key]
      %}
      {% if member_name != blank %}
        {% assign has_members = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_members %}
      <div class="ai-meet-team-grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign name_key = 'member_' | append: i | append: '_name'
            assign role_key = 'member_' | append: i | append: '_role'
            assign bio_key = 'member_' | append: i | append: '_bio'
            assign image_key = 'member_' | append: i | append: '_image'
            
            assign member_name = block.settings[name_key]
            assign member_role = block.settings[role_key]
            assign member_bio = block.settings[bio_key]
            assign member_image = block.settings[image_key]
          %}

          {% if member_name != blank %}
            <div class="ai-meet-team-member-{{ ai_gen_id }}">
              <div class="ai-meet-team-image-wrapper-{{ ai_gen_id }}">
                {% if member_image %}
                  <img
                    src="{{ member_image | image_url: width: 400 }}"
                    alt="{{ member_image.alt | default: member_name | escape }}"
                    class="ai-meet-team-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="{{ block.settings.image_size }}"
                    height="{{ block.settings.image_size }}">
                {% else %}
                  <div class="ai-meet-team-image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <h3 class="ai-meet-team-name-{{ ai_gen_id }}">{{ member_name }}</h3>
              
              {% if member_role != blank %}
                <p class="ai-meet-team-role-{{ ai_gen_id }}">{{ member_role }}</p>
              {% endif %}
              
              {% if member_bio != blank %}
                <div class="ai-meet-team-bio-{{ ai_gen_id }}">{{ member_bio }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-meet-team-empty-state-{{ ai_gen_id }}">
        Add team members to get started
      </div>
    {% endif %}
  </div>
</div>

