{% doc %}
  @prompt
    can you create a link block widget where in mobile its stacked in two rows of two and on desktop its a linear line
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-link-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-link-block-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.mobile_gap }}px;
    width: 100%;
  }

  .ai-link-block-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.link_padding }}px;
    background-color: {{ block.settings.link_background }};
    color: {{ block.settings.link_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.border_radius }}px;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-align: center;
    transition: all 0.3s ease;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-link-block-item-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.link_hover_background }};
    color: {{ block.settings.link_hover_text_color }};
    border-color: {{ block.settings.border_hover_color }};
  }

  @media screen and (min-width: 750px) {
    .ai-link-block-container-{{ ai_gen_id }} {
      grid-template-columns: repeat(4, 1fr);
      gap: {{ block.settings.desktop_gap }}px;
      width: {{ block.settings.desktop_width_percent }}%;
      margin: 0 auto;
    }
  }
{% endstyle %}

<link-block-{{ ai_gen_id }} class="ai-link-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-link-block-container-{{ ai_gen_id }}">
    {% if block.settings.link_1_text != blank %}
      <a 
        href="{{ block.settings.link_1_url }}" 
        class="ai-link-block-item-{{ ai_gen_id }}"
      >
        {{ block.settings.link_1_text }}
      </a>
    {% endif %}

    {% if block.settings.link_2_text != blank %}
      <a 
        href="{{ block.settings.link_2_url }}" 
        class="ai-link-block-item-{{ ai_gen_id }}"
      >
        {{ block.settings.link_2_text }}
      </a>
    {% endif %}

    {% if block.settings.link_3_text != blank %}
      <a 
        href="{{ block.settings.link_3_url }}" 
        class="ai-link-block-item-{{ ai_gen_id }}"
      >
        {{ block.settings.link_3_text }}
      </a>
    {% endif %}

    {% if block.settings.link_4_text != blank %}
      <a 
        href="{{ block.settings.link_4_url }}" 
        class="ai-link-block-item-{{ ai_gen_id }}"
      >
        {{ block.settings.link_4_text }}
      </a>
    {% endif %}
  </div>
</link-block-{{ ai_gen_id }}>

<script>
  (function() {
    class LinkBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('link-block-{{ ai_gen_id }}', LinkBlock{{ ai_gen_id }});
  })();
</script>

