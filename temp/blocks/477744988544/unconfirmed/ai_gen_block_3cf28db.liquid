{% doc %}
  @prompt
    Can you make a horizontonal logo list widget that automatically scrolls
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-logo-scroll-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    display: block;
  }

  .ai-logo-scroll-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.logo_spacing }}px;
    animation: ai-logo-scroll-animation-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    will-change: transform;
  }

  .ai-logo-scroll-{{ ai_gen_id }}:hover .ai-logo-scroll-wrapper-{{ ai_gen_id }} {
    animation-play-state: paused;
  }

  .ai-logo-scroll-item-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.logo_width }}px;
    height: {{ block.settings.logo_height }}px;
  }

  .ai-logo-scroll-item-{{ ai_gen_id }} img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: {{ block.settings.logo_opacity }};
    transition: opacity 0.3s ease;
    filter: grayscale({{ block.settings.grayscale_amount }}%);
  }

  .ai-logo-scroll-item-{{ ai_gen_id }}:hover img {
    opacity: 1;
    filter: grayscale(0%);
  }

  .ai-logo-scroll-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
  }

  .ai-logo-scroll-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @keyframes ai-logo-scroll-animation-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-logo-scroll-wrapper-{{ ai_gen_id }} {
      animation: none;
    }
  }
{% endstyle %}

<logo-scroll-{{ ai_gen_id }} class="ai-logo-scroll-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-logo-scroll-wrapper-{{ ai_gen_id }}">
    {% for i in (1..8) %}
      {% liquid
        assign logo_key = 'logo_' | append: i
        assign logo = block.settings[logo_key]
      %}
      
      {% if logo != blank %}
        <div class="ai-logo-scroll-item-{{ ai_gen_id }}">
          <img
            src="{{ logo | image_url: width: 400 }}"
            alt="{{ logo.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.logo_width }}"
            height="{{ block.settings.logo_height }}"
          >
        </div>
      {% else %}
        <div class="ai-logo-scroll-item-{{ ai_gen_id }}">
          <div class="ai-logo-scroll-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        </div>
      {% endif %}
    {% endfor %}

    {% for i in (1..8) %}
      {% liquid
        assign logo_key = 'logo_' | append: i
        assign logo = block.settings[logo_key]
      %}
      
      {% if logo != blank %}
        <div class="ai-logo-scroll-item-{{ ai_gen_id }}">
          <img
            src="{{ logo | image_url: width: 400 }}"
            alt="{{ logo.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.logo_width }}"
            height="{{ block.settings.logo_height }}"
          >
        </div>
      {% else %}
        <div class="ai-logo-scroll-item-{{ ai_gen_id }}">
          <div class="ai-logo-scroll-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</logo-scroll-{{ ai_gen_id }}>

<script>
  (function() {
    class LogoScroll{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.wrapper = this.querySelector('.ai-logo-scroll-wrapper-{{ ai_gen_id }}');
        this.adjustScrollSpeed();
      }

      adjustScrollSpeed() {
        if (!this.wrapper) return;
        
        const items = this.wrapper.querySelectorAll('.ai-logo-scroll-item-{{ ai_gen_id }}');
        if (items.length === 0) return;

        const totalWidth = Array.from(items).reduce((sum, item) => {
          return sum + item.offsetWidth + {{ block.settings.logo_spacing }};
        }, 0);

        this.wrapper.style.width = totalWidth + 'px';
      }
    }

    customElements.define('logo-scroll-{{ ai_gen_id }}', LogoScroll{{ ai_gen_id }});
  })();
</script>

