{%- assign characters = section.settings.product.metafields.book.characters.value -%}

{%- if characters.size > 0 -%}
{%- render 'section-spacing-collapsing' -%}

{%- comment -%}
------------------------------------------------------------------------------------------------------------------------
CSS
------------------------------------------------------------------------------------------------------------------------
{%- endcomment -%}
{%- assign block = section.blocks | first -%}
<style>
  

  

    .character {margin-bottom: 10px}
    .character .bio {padding: 27px; border-radius: 20px;}
    .character .photo {padding: 10px}
    .character .photo img {width: 100%; border-radius: 50%; object-fit: cover; border: 1px solid red;}


    .character-grid {
      display: grid;
        grid-template-columns: 1fr 2fr;
            grid-gap: 15px;
    }

    @media screen and (max-width: 1000px) {
      .character-grid {
        grid-template-columns: 1fr
      }
    }
  
</style>

{%- comment -%}
------------------------------------------------------------------------------------------------------------------------
LIQUID
------------------------------------------------------------------------------------------------------------------------
{%- endcomment -%}
  
  
    <div {% render 'section-properties' %}>
      
      
        <media-with-text class="character" >
          <div class="character-grid">
        {%- for character in characters -%}
        {%- assign photo = character.photos.value | first -%}

            <div class="photo" >

              {%- assign width_ratio = 100.0 | divided_by: block.settings.media_width -%}
              {%- assign maximum_image_width = settings.page_width | divided_by: width_ratio -%}

              {%- capture sizes -%}(max-width: 999px) 100vw, min({{ maximum_image_width | ceil }}px, {{ block.settings.media_width }}vw){% endcapture %}

              {{- photo | image_url: width: '300px', height: '300px' | image_tag: loading: 'lazy', sizes: sizes, widths: '300,400,500,600' -}}

              
            </div>

            <div {% render 'surface', class: "bio", background: block.settings.background, background_gradient: block.settings.background_gradient, text_color: block.settings.text_color %}>
              <div class="prose break-all {{ block.settings.text_position }}">
              
                {%- if block.settings.subheading != blank -%}
                  <p class="subheading">{{ block.settings.subheading | escape }}</p>
                {%- endif -%}

                {%- if block.settings.title != blank -%}
                  <p class="h2" style="color:{{- block.settings.heading_text_color -}}">
                    {%- render 'styled-text', content: character.name, gradient: block.settings.text_gradient -%}
                  </p>
                {%- endif -%}

                {{- character.bio | metafield_tag | truncate: 400 | strip_html | truncate: 400 -}}

                {%- if block.settings.link_text != blank -%}
                  {{ block.settings.link_text | link_to: character.system.url, class: 'link'}}
                {%- endif -%}
              </div>

            </div>
          

        {%- endfor -%}
      </div>
        </media-with-text>  
      
    </div>
{%- endif -%}
